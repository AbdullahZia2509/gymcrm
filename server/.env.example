# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/gym-crm
# For production, use MongoDB Atlas or similar service
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/gym-crm

# JWT Secret Keys
JWT_SECRET=your_jwt_secret_key_here
JWT_RESET_SECRET=your_jwt_reset_secret_key_here

# Email Configuration (for password reset, notifications, etc.)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@gymcrm.com

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5000000 # 5MB
